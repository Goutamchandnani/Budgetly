{
    "info": {
        "name": "Budgetly API",
        "description": "Complete API collection for Budgetly backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Signup",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"student@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"John Doe\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/signup",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "signup"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"student@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/auth/me",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "me"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Budget",
            "item": [
                {
                    "name": "Get Budget",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/budget",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "budget"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Budget",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"monthlyBudget\": 150\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/budget",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "budget"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Expenses",
            "item": [
                {
                    "name": "Get Expenses (Current Month)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/expenses",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "expenses"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Expenses (Specific Month)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/expenses?month=2026-02",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "expenses"
                            ],
                            "query": [
                                {
                                    "key": "month",
                                    "value": "2026-02"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Expense",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"description\": \"Coffee\",\n  \"amount\": 4.50,\n  \"category\": \"Food\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/expenses",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "expenses"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Expense",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/expenses/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "expenses",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "EXPENSE_ID_HERE"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Expense Statistics",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/expenses/stats",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "expenses",
                                "stats"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Telegram",
            "item": [
                {
                    "name": "Generate Linking Code",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/telegram/generate-code",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "telegram",
                                "generate-code"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Telegram Status",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/telegram/status",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "telegram",
                                "status"
                            ]
                        }
                    }
                },
                {
                    "name": "Disconnect Telegram",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/telegram/disconnect",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "telegram",
                                "disconnect"
                            ]
                        }
                    }
                },
                {
                    "name": "Webhook - Link Account",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"chatId\": \"123456789\",\n  \"linkingCode\": \"123456\",\n  \"username\": \"johndoe\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/telegram/webhook",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "telegram",
                                "webhook"
                            ]
                        }
                    }
                },
                {
                    "name": "Webhook - Create Expense",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"chatId\": \"123456789\",\n  \"description\": \"Lunch\",\n  \"amount\": \"12.50\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/telegram/webhook",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "telegram",
                                "webhook"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}